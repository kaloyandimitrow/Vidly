@model Vidly.ViewModels.MoviesViewModel
@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<button type="button" class="btn btn-group">
	@Html.ActionLink("New Movie", "New", "Movies", null, new { })
</button> 

@if (Model.Movies.Count == 0)
{
	<text>Currently we don't have any movies.</text>
}
else
{
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Genre</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var movie in Model.Movies)
		{
		<tr>
			
			<td>@Html.ActionLink(@movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
			<td>@movie.Genre.Name</td>
		</tr>
		}
	</tbody>
</table>
}

